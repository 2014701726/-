<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="whj.nb.motianluneureka.dao.AddressDao">

    <resultMap type="whj.nb.motianluneureka.bean.Address" id="AddressMap">
        <id property="addressId" column="address_id" jdbcType="VARCHAR"/>
        <result property="customerPhone" column="customer_phone" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="province" column="province" jdbcType="VARCHAR"/>
        <result property="city" column="city" jdbcType="VARCHAR"/>
        <result property="area" column="AREA" jdbcType="VARCHAR"/>
        <result property="detail" column="detail" jdbcType="VARCHAR"/>
        <result property="ismrAddr" column="ismr_addr" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AddressMap">
        select
          address_id, customer_phone, phone, province, city, AREA, detail, ismr_addr
        from motianlun.address
        where address_id = #{addressId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AddressMap">
        select
          address_id, customer_phone, phone, province, city, AREA, detail, ismr_addr
        from motianlun.address
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AddressMap">
        select
        address_id, customer_phone, phone, province, city, AREA, detail, ismr_addr
        from motianlun.address
        <where>
            <if test="addressId != null and addressId != ''">
                and address_id = #{addressId}
            </if>
            <if test="customerPhone != null and customerPhone != ''">
                and customer_phone = #{customerPhone}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="province != null and province != ''">
                and province = #{province}
            </if>
            <if test="city != null and city != ''">
                and city = #{city}
            </if>
            <if test="area != null and area != ''">
                and AREA = #{area}
            </if>
            <if test="detail != null and detail != ''">
                and detail = #{detail}
            </if>
            <if test="ismrAddr != null and ismrAddr != ''">
                and ismr_addr = #{ismrAddr}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="addressId" useGeneratedKeys="true">
        insert into motianlun.address(customer_phone, phone, province, city, AREA, detail, ismr_addr)
        values (#{customerPhone}, #{phone}, #{province}, #{city}, #{area}, #{detail}, #{ismrAddr})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update motianlun.address
        <set>
            <if test="customerPhone != null and customerPhone != ''">
                customer_phone = #{customerPhone},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="province != null and province != ''">
                province = #{province},
            </if>
            <if test="city != null and city != ''">
                city = #{city},
            </if>
            <if test="area != null and area != ''">
                AREA = #{area},
            </if>
            <if test="detail != null and detail != ''">
                detail = #{detail},
            </if>
            <if test="ismrAddr != null and ismrAddr != ''">
                ismr_addr = #{ismrAddr},
            </if>
        </set>
        where address_id = #{addressId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from motianlun.address where address_id = #{addressId}
    </delete>

</mapper>